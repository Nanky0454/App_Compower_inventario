  <form method="POST" class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-lg border-2 border-red-400 relative animate-fade-in" onsubmit="import('/src/components/proyectos/centro-costo-modal.js').then(m => m.submitDeleteForm(event))">
